{
  "$schema": "https://opencode.ai/config.json",

  // Global instructions for DRS review behavior
  "instructions": [
    ".gitlab-review.md"
  ],

  // Custom tools configuration
  "tools": {
    "gitlab-api": true,
    "github-api": true,
    "Bash": true,
    "Read": true,
    "Glob": true,
    "Grep": true,
    "Write": false,
    "Edit": false
  },

  // Agent model configuration
  "agent": {
    "gitlab-reviewer": {
      "model": "zhipuai/glm-4.7"
    },
    "github-reviewer": {
      "model": "zhipuai/glm-4.7"
    },
    "local-reviewer": {
      "model": "zhipuai/glm-4.7"
    },
    "review/security": {
      "model": "zhipuai/glm-4.7"
    },
    "review/quality": {
      "model": "zhipuai/glm-4.7"
    },
    "review/style": {
      "model": "zhipuai/glm-4.7"
    },
    "review/performance": {
      "model": "zhipuai/glm-4.7"
    }
  }
}
