{
  "name": "@diff-review-system/drs",
  "version": "2.2.0",
  "description": "Intelligent code review platform for GitLab and GitHub - Enterprise-grade automated analysis",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "drs": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "vitest run",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,json}'",
    "check:all": "npm run format && npm run lint:fix && npm run build && npm test && npm run format:check && npm run lint",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".opencode"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manojlds/drs.git"
  },
  "bugs": {
    "url": "https://github.com/manojlds/drs/issues"
  },
  "homepage": "https://github.com/manojlds/drs#readme",
  "keywords": [
    "gitlab",
    "github",
    "code-review",
    "pi",
    "diff-review",
    "merge-request",
    "pull-request",
    "code-analysis",
    "static-analysis"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@gitbeaker/node": "^35.8.1",
    "@octokit/rest": "^21.0.0",
    "@mariozechner/pi-agent-core": "^0.52.12",
    "@mariozechner/pi-ai": "^0.52.12",
    "ajv": "^8.17.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.0.0",
    "simple-git": "^3.22.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
